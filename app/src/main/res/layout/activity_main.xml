<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zeeshan.administrator.myappportfolio.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="My Nanodegree App!"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_pop_movies"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Popular Movies"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_stock_hawk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Stock Hawk"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_build_it_bigger"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Build it Bigger"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_make_your_app_material"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Make Your App Material"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_go_ubiquitous"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Go Ubiquitous"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_capstone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Capstone "
            android:textSize="15dp" />


    </LinearLayout>
</RelativeLayout>
